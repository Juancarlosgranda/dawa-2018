extends layout

block content
    h2.form-signin-heading Tipos de usuario
    h5  
        a(href="/") Home 
    br
    h4.form-signin-heading Crear nuevos tipos de usuario
    br
    form.form-signin(method = "post",action="/tipos/create")
        div.form-group
            label(for='nombre') Nombre:
            input#nombre.form-control(type="text" name="nombre",placeholder="Nombre del tipo de usuario")    
        button.btn.btn-large.btn-success(type="submit") Crear
    br
    br
    table.table
                    thead
                        tr
                            th ID
                            th Nombre
                            th Acciones
                    tbody
                        for item in data
                            tr
                                td= item._id
                                td= item.nombre
                                td 
                                    a(href="/tipos/edit/#{item._id}").btn.btn-large.btn-success Editar
                                    a(href="/tipos/delete/#{item._id}").btn.btn-large.btn-danger Eliminar
    